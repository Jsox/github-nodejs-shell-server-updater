    "repository": {
        "type": "",
        "url": "https://github.com/Jsox/github-nodejs-shell-server-updater.git"
    },
    "files": [
        "pm2me.js",
        "start.js",
        "lib"
    ],
    "version": "1.0.0",
    "main": "start.js",
    "author": {
        "name": "Jsix",
        "email": "admin@jsix.ru"
    },
    "license": "BSD-3-Clause",
    "dependencies": {
        "github-webhook-handler": "^1.0.0",
        "shelljs": "^0.8.5"
    },
    "eslintConfig": {
        "env": {
            "browser": false,
            "es6": true
        },
        "parserOptions": {
            "ecmaVersion": "latest"
        },
        "rules": {
            "no-unused-vars": [
                "off"
            ]
        }
    },
    "scripts": {
